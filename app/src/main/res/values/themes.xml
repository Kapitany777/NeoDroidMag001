<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NeoDroidMag001" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.NeoDroidMag001" parent="Base.Theme.NeoDroidMag001">
        <item name="android:background">#f0f8ff</item>
    </style>

    <style name="ButtonMenu" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:backgroundTint">#0078d7</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/audiowide_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#0058b7</item>
        <item name="android:fontFamily">@font/audiowide_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewCategoryName">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/audiowide_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewListTitle">
        <item name="android:padding">8dp</item>
        <item name="android:background">#0078d7</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/audiowide_regular</item>
        <item name="android:textSize">18sp</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>

    <style name="TextViewListAuthor">
        <item name="android:padding">8dp</item>
        <item name="android:background">#0078d7</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/audiowide_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>